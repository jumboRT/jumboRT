C -2,0,0 1,0,0 90

tex_def tex_check assets/checker.bmp
tex_def tex_bump scenes/bump/wavy.bmp
tex_def tex_ball assets/golf_ball.bmp

# box vertices
v -2,-1,-1
v -2,-1, 1
v -2, 1,-1
v -2, 1, 1
v  1,-1,-1
v  1,-1, 1
v  1, 1,-1
v  1, 1, 1

# light vertices
v -0.5,-0.5, 0.9
v -0.5, 0.5, 0.9
v  0.5,-0.5, 0.9
v  0.5, 0.5, 0.9
v -0.5,-0.5, 1.0
v -0.5, 0.5, 1.0
v  0.5,-0.5, 1.0
v  0.5, 0.5, 1.0

mat_beg mat_ball
#	cook_torrance 0.15 0.0 1.0972 255,255,0
#	transmissive 1.0 (1.0, 0.0, 0.0) 1.4
