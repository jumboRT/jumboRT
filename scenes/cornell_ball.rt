	transmissive 1.0 (1.0, 1.0, 1.0) 1.5
#	reflective 255,255,0 0.0
mat_end
sp 0,0,0 1 mat_ball

# walls
mat_beg mat_left diffuse 1.0 255,0,0 mat_end
mat_beg mat_right diffuse 1.0 0,255,0 mat_end
mat_beg mat_white diffuse 1.0 255,255,255 mat_end
f 1 0 4 mat_left
f 4 5 1 mat_left
f 2 3 6 mat_right
f 7 6 3 mat_right
f 5 4 6 mat_white
f 6 7 5 mat_white
f 3 1 5 mat_white
f 5 7 3 mat_white
f 0 2 4 mat_white
f 6 4 2 mat_white
f 0 1 3 mat_white
f 3 2 0 mat_white
